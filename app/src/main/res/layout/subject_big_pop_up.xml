<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:background="#00FFFFFF">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="600dp"
            app:cardBackgroundColor="#CF3C3C"
            app:cardCornerRadius="10dp"
            app:strokeWidth="5dp"
            app:strokeColor="#5C5A5A"
            android:elevation="8dp"
            android:background="#00FFFFFF"
            android:id="@+id/bCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Fach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bNameTV"
                    android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAlignment="center"
                    android:textSize="60dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#000000" />

            <TextView
                    android:text="Lehrer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bTeacherTV"
                    android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bNameTV"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:paddingBottom="20dp" />

            <TextView
                    android:text="mÃ¼ndlich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bTeacherTV"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp" />

            <TextView
                    android:text="Noten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    app:layout_constraintTop_toBottomOf="@+id/bTeacherTV"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/textView13"
                    android:layout_marginStart="8dp" />

            <TextView
                    android:text="schriftlich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/textView14"
                    android:layout_marginStart="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/bTeacherTV"
                    android:textSize="20sp" />

            <TextView
                    android:text="Noten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/textView15"
                    app:layout_constraintTop_toBottomOf="@+id/bTeacherTV"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent" />

            <ListView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView15"
                    android:id="@+id/bWriteLV" />

            <ListView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/textView14"
                    android:id="@+id/bSpeakLV" >

            </ListView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>